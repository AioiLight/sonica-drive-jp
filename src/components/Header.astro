---
import imgLogo from '@assets/sonica-logo.svg';
import { Image } from 'astro:assets';
---
<div class="header-wrapper content-wrapper">
    <header class="header">
        <a href="/" class="header__link">
            <Image src={imgLogo} alt="ソニカ" class="header__logo"></Image>
            <p class="header__unofficial">非公式ファンサイト</p>
        </a>
    </header>
</div>

<style>
    .header-wrapper {
        position: sticky;
        padding-block-start: 10px;
        inset-block-start: 0px;
    }
    .header {
        background: var(--color-background);
        border: 2px solid var(--color-primary);
        border-radius: 999px;
        padding-inline: 10px;
        padding-block: 10px;
        box-shadow: 0px 2px 4px 0px rgb(0 0 0 / .25);
    }
    .header__link {
        display: grid;
        grid-template-columns: auto auto;
        align-items: center;
        justify-content: start;
        gap: 4px;
        text-decoration: none;
    }
    .header__link:hover {
        opacity: .85;
    }
    .header__unofficial {
        color: var(--color-primary);
        font-size: 10px;
        letter-spacing: .3em;
    }
</style>